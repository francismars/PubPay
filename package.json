{
  "name": "pubpay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "tsx src/server.ts",
    "start:backend": "pnpm --filter @pubpay/backend start",
    "dev": "pnpm --filter @pubpay/homepage dev",
    "dev:homepage": "pnpm --filter @pubpay/homepage dev",
    "dev:live": "pnpm --filter @pubpay/live dev",
    "dev:jukebox": "pnpm --filter @pubpay/jukebox dev",
    "dev:backend": "pnpm --filter @pubpay/backend dev",
    "dev:all": "concurrently \"pnpm dev:backend\" \"pnpm dev:homepage\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:apps": "concurrently \"pnpm dev:homepage\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:full": "concurrently \"pnpm dev:backend\" \"pnpm dev:homepage\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:windows": "node scripts/start-dev-windows.js",
    "dev:windows:ps": "powershell -ExecutionPolicy Bypass -File scripts/start-dev-windows.ps1",
    "dev:windows:bat": "scripts/start-dev-windows.bat",
    "build": "pnpm -r build",
    "build:homepage": "pnpm --filter @pubpay/homepage build",
    "build:live": "pnpm --filter @pubpay/live build",
    "build:jukebox": "pnpm --filter @pubpay/jukebox build",
    "build:backend": "pnpm --filter @pubpay/backend build",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.2",
    "bolt11": "^1.4.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "http-errors": "~1.6.3",
    "jade": "^0.29.0",
    "morgan": "~1.9.1",
    "nodemon": "^3.1.7",
    "nostr-tools": "^2.17.0",
    "qrcode": "^1.5.4",
    "qrious": "^4.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "ws": "^8.14.2",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.35.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "sass": "^1.92.1",
    "sass-loader": "^16.0.5",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
