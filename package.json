{
  "name": "pubpay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:backend": "pnpm --filter @pubpay/backend start",
    "dev": "pnpm --filter @pubpay/pubpay dev",
    "dev:pubpay": "pnpm --filter @pubpay/pubpay dev",
    "dev:live": "pnpm --filter @pubpay/live dev",
    "dev:jukebox": "pnpm --filter @pubpay/jukebox dev",
    "dev:backend": "pnpm --filter @pubpay/backend dev",
    "dev:all": "concurrently \"pnpm dev:backend\" \"pnpm dev:pubpay\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:apps": "concurrently \"pnpm dev:pubpay\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:full": "concurrently \"pnpm dev:backend\" \"pnpm dev:pubpay\" \"pnpm dev:live\" \"pnpm dev:jukebox\"",
    "dev:windows": "node scripts/start-dev-windows.js",
    "dev:windows:ps": "powershell -ExecutionPolicy Bypass -File scripts/start-dev-windows.ps1",
    "dev:windows:bat": "scripts/start-dev-windows.bat",
    "dev:macos": "bash scripts/start-dev-macos.sh",
    "dev:macos:tabs": "bash scripts/start-dev-macos-tabs.sh",
    "dev:linux": "bash scripts/start-dev-linux.sh",
    "build": "pnpm -r build",
    "build:prod": "NODE_ENV=production pnpm -r build",
    "build:pubpay": "pnpm --filter @pubpay/pubpay build",
    "build:live": "pnpm --filter @pubpay/live build",
    "build:jukebox": "pnpm --filter @pubpay/jukebox build",
    "build:backend": "pnpm --filter @pubpay/backend build",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.35.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tools/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "packages/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "tools/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "scripts/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
